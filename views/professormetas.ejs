<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  </head>
  <body>
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
          <tr>
            <th>Titulo</th>
            <th>Descricao</th>
            <th>Status</th>
            <th>Prazo</th>
            <th>Aluno</th>
          </tr>
        </thead>
        <tbody>
          <% metas.forEach(meta => { %>
            <tr>
              <td><%= meta.titulo %></td>
              <td><%= meta.descricao %></td>
              <td><%= meta.status %></td>
              <td>
                <% 
                  let prazo = new Date(meta.prazo);
                  let day = prazo.getDate().toString().padStart(2, '0');
                  let month = (prazo.getMonth() + 1).toString().padStart(2, '0'); // Months are 0-based
                  let year = prazo.getFullYear();
                  let formattedPrazo = day + '/' + month + '/' + year;
                %>
                <%= formattedPrazo %>
              </td>
              <td><%= meta.aluno %></td>
              <!-- Add more data cells as needed -->
            </tr>
          <% }); %>
        </tbody>
      </table>
</body>
</html>