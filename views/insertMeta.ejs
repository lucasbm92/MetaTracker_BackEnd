<!DOCTYPE html>
<html>
<head>
    <title>Insert Meta</title>
</head>
<body>
    <div id="insertMeta">
        <h2>Insert Meta</h2>
        <% if (typeof errorMessage !== 'undefined') { %>
            <div class="alert alert-danger">
                <%= errorMessage %>
            </div>
        <% } %>
        <form action="/meta" method="post">
            <div class="form-group">
                <label for="titulo">Titulo:</label>
                <input type="text" name="titulo" id="titulo" placeholder="Titulo" required>
            </div>
            <div class="form-group">
                <label for="descricao">Descricao:</label>
                <textarea name="descricao" id="descricao" placeholder="Descricao" required></textarea>
            </div>
            <div class="form-group">
                <label for="status">Status:</label>
                <input type="number" name="status" id="status" placeholder="Status" required>
            </div>
            <div class="form-group">
                <label for="prazo">Prazo:</label>
                <input type="date" name="prazo" id="prazo" required>
            </div>
            <button type="submit">Insert</button>
        </form>
    </div>
</body>
</html>